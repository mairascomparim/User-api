{
    "compilerOptions": {
      "target": "ES6",                           // Define o padrão de ECMAScript alvo
      "module": "commonjs",                      // Define o sistema de módulo como CommonJS
      "strict": true,                            // Habilita verificações estritas
      "esModuleInterop": true,                   // Permite interoperabilidade entre módulos ES e CommonJS
      "outDir": "./dist",                        // Define o diretório de saída para o código compilado
      "rootDir": "./src",                        // Define o diretório raiz dos arquivos TypeScript
      "resolveJsonModule": true,                 // Permite a importação de arquivos JSON
      "skipLibCheck": true                       // Pula a verificação de tipos de bibliotecas
    },
    "include": ["src/**/*.ts"],                   // Inclui todos os arquivos TypeScript no diretório src
    "exclude": ["node_modules"]                   // Exclui node_modules
  }
  